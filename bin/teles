#!/usr/bin/env node
"use strict";

var http = require("http");
var iconv = require("iconv-lite");

http.request(
   "http://teles-jokes.azurewebsites.net/api/HttpTriggerCSharp1?code=hSQ0goc223DgoBWin5XZaPBwJPvdKIVRu7o0RfeIl75EEWganjmksw==",
  function (response) {
  if (response.statusCode === 200) {
    response.pipe(iconv.decodeStream("ISO-8859-1"))
      .collect(function (error, body) {
      if (error) {
        console.error("Erro!");
        process.exit(1);
      } else {
	  	console.log(JSON.parse(body).joke);
      }
    });
  } else {
    console.error("Serviço indisponível.");
    process.exit(1);
  }
}).on("error", function (e) {
  console.error("Serviço indisponível. [e]");
  process.exit(1);
}).end();
